@model PizzaApp.Models.ReservationRestaurantTable

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit information about restauration</h1>

<h4>ReservationRestaurantTable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ReservationId" class="control-label"></label>
                <select asp-for="ReservationId" class="form-control" asp-items="ViewBag.ReservationId"></select>
                <span asp-validation-for="ReservationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantTableId" class="control-label"></label>
                <select asp-for="RestaurantTableId" class="form-control" asp-items="ViewBag.RestaurantTableId"></select>
                <span asp-validation-for="RestaurantTableId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
