@model PizzaApp.ViewModels.Authorization.ApplicationUserViewModel

@{
    ViewData["Title"] = "Delete account";
}

<div class="row">
    <div class="col-10">
        <h1>Delete</h1>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-dark" style="top: 10px; position: absolute; width: 80%" asp-action="Index">Return</a>
    </div>
</div>

<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
    </form>
</div>
