@model PizzaApp.Models.Complaint

@{
	ViewData["Title"] = "Create";
}
<h2>Share with us your opinion!</h2>

<h4>Please share your opinion with us to make our pizzeria become better</h4>

<hr />
<div class="row">
	<div class="col-md-12">
		<form asp-action="CreateUser">
			@Html.Hidden("Date")
			@Html.Hidden("ComplaintStatusId")
			@Html.Hidden("ClientId")
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Submit" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
